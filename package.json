{
  "name": "@ampnet/wink-wysiwyg",
  "version": "0.2.4",
  "description": "A modern, extensible WYSIWYG editor for React applications with @mentions and #hashtags support",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.esm.js"
    },
    "./client": {
      "types": "./dist/index.d.ts",
      "import": "./dist/client.js"
    },
    "./dist/index.css": "./dist/index.css",
    "./dist/index.esm.css": "./dist/index.esm.css"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.mjs",
    "dev": "rollup -c rollup.config.mjs -w",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "prepare": "npm run build",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "version:prerelease": "npm version prerelease",
    "release:patch": "npm run version:patch && npm run build && git push --follow-tags",
    "release:minor": "npm run version:minor && npm run build && git push --follow-tags",
    "release:major": "npm run version:major && npm run build && git push --follow-tags"
  },
  "keywords": [
    "wysiwyg",
    "editor",
    "react",
    "typescript",
    "tiptap",
    "prosemirror",
    "mentions",
    "hashtags",
    "tailwindcss"
  ],
  "author": "ampnet (media) <https://ampnet.media>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ampnet-media/wink-wysiwyg.git"
  },
  "bugs": {
    "url": "https://github.com/ampnet-media/wink-wysiwyg/issues"
  },
  "homepage": "https://github.com/ampnet-media/wink-wysiwyg#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-typescript": "^12.1.4",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitejs/plugin-react": "^5.0.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.35.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.6",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "rollup": "^4.50.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "tailwindcss": "^4.1.13",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@tiptap/extension-color": "^3.4.1",
    "@tiptap/extension-highlight": "^3.4.1",
    "@tiptap/extension-image": "^3.4.1",
    "@tiptap/extension-link": "^3.4.1",
    "@tiptap/extension-mention": "^3.4.1",
    "@tiptap/extension-placeholder": "^3.4.1",
    "@tiptap/extension-text-align": "^3.4.1",
    "@tiptap/extension-text-style": "^3.4.1",
    "@tiptap/extension-underline": "^3.4.1",
    "@tiptap/pm": "^3.4.1",
    "@tiptap/react": "^3.4.1",
    "@tiptap/starter-kit": "^3.4.1",
    "isomorphic-dompurify": "^2.26.0",
    "lucide-react": "^0.542.0"
  }
}
